{% extends 'AcmeNewsBundle::layout.html.twig' %}

{% block title %}News date | Новости | {{ parent() }}{% endblock %}

{% block header_navbar %}
    <li><a href="{{ path('acme_news_list') }}">HTML list</a></li>
    <li><a href="{{ path('acme_news_list', {'_format': 'xml'}) }}">XML list</a></li>
{% endblock %}

{% block body %}
    <div class="row">
        <nav class="col-xs12 navback" aria-labelledby="backtolist">
            <a id="backtolist" href="{{ path('acme_news_list') }}"><span aria-hidden="true">&larr; </span>Вернуться к списку новостей</a>
        </nav>
    </div>

    <article role="main" class="row">
        <section class="pubtime col-xs-10 col-xs-offset-1">
            <time datetime="{{ news.createdAt|date('d.m.Y H:i') }}">{{ news.createdAt|date('d.m.Y H:i') }}</time>
        </section>
        <section class="excerpt col-xs-10 col-xs-offset-1">
            {{ news.excerpt }}
        </section>
        <section class="col-xs-10 col-xs-offset-1">
            {{ news.fullText }}
        </section>
    </article>

    <aside class="row">
        <nav class="newsnav col-xs-12" aria-label="Навигация по соседним новостям">
            <ul class="pager">

            {% if prevId %}
                <li class="previous"><a href="{{ path('acme_full_news', {'pageId': prevId}) }}" rel="prev"><span aria-hidden="true">&larr;</span> Предыдущая новость</a></li>
            {% else %}
                <li class="previous disabled"><a href="#" rel="prev"><span aria-hidden="true">&larr;</span> Предыдущая новость</a></li>
            {% endif %}

            {% if nextId %}
                <li class="next"><a href="{{ path('acme_full_news', {'pageId': nextId}) }}" rel="next">Следующая новость <span aria-hidden="true">&rarr;</span></a></li>
            {% else %}
                <li class="next disabled"><a href="#" rel="next">Следующая новость <span aria-hidden="true">&rarr;</span></a></li>
            {% endif %}

            </ul>
        </nav>

        {{ render(controller('AcmeNewsBundle:View:listPagination', {'page': page, 'perPage': perPage})) }}
    </aside>
{% endblock %}